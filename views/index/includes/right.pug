div(class='col-4')
   div(class='border rounded p-2 m-auto p-4')
      div 
         h4 Historial 
         hr(class='bg-light w-25 mx-auto')
         table(class='table text-white')
            thead
               th Nombre 
               th Comentario 
               th Monto
            tbody(id='gastos')
               each gasto in gastos 
                  tr
                     td= gasto.name
                     td= gasto.description
                     td(class='text-red')= gasto.amount
                     td
                        i(id='edit-icon' class="fa-solid fa-pen-to-square d-inline mx-1" data-bs-toggle='modal' data-bs-target='#edit-modal')
                        i(id='delete-icon' class='fas fa-trash-alt d-inline mx-1')